@{
    ViewData["Title"] = "Home Page";
}
@model thursdaySportsday.Models.RegisterViewModel
<h1>Sportsday Thursday</h1>
<p>Login or Register to create a Sport Event for upcoming weekdays</p>
<h1>Register</h1>

<br>
<br>

<div class="row">
    <form asp-action="register" method="post">
        <!--  -->
        <div class="form-group row">
            <label asp-for="firstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-3">
                <input asp-for="firstName" class="form-control">
            </div>
            <div class="col-sm-3"><span class="rederror" asp-validation-for="firstName"></span></div>
        </div>
        <!--  -->
        <div class="form-group row">
            <label asp-for="lastName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-3">
                <input asp-for="lastName" class="form-control">
            </div>
            <div class="col-sm-2"><span class="rederror" asp-validation-for="lastName"></span></div>
        </div>
        <!--  -->
        <div class="form-group row">
            <label asp-for="emailAddress" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="emailAddress" class="form-control">
            </div>
            <div class="col-sm-2"><span class="rederror" asp-validation-for="emailAddress"></span></div>
        </div>
        <!--  -->
        <div class="form-group row">
            <label asp-for="password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="password" class="form-control">
            </div>
            <div class="col-sm-2"><span class="rederror" asp-validation-for="password"></span></div>
        </div>
        <!--  -->
        <div class="form-group row">
            <label asp-for="confirmPassword" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="confirmPassword" class="form-control">
            </div>
            <div class="col-sm-2"><span class="rederror" asp-validation-for="confirmPassword"></span></div>
        </div>
        <!--  -->
        <div class="row">
            <div class="col-sm-5">
                <input type="submit" value="Register" class="btn btn-primary pull-right">
            </div>
        </div>
        <!--  -->
    </form>    
</div>


<h1>Log In</h1>

<br>
<br>

<div class="row">
    <form action="login" method="post">
        <!--  -->
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email Address</label>
            <div class="col-sm-4">
                <input class="form-control" type="email" name="email">
            </div>
            <div class="col-sm-3"><span class="rederror"> @ViewBag.emailerror </span></div>
        </div>
        <!--  -->
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-2">
                <input type="password" class="form-control" name="password">
            </div>
            <div class="col-sm-3"><span class="rederror"> @ViewBag.passworderror </span></div>
        </div>
        <!--  -->
        <div class="row">
            <div class="col-sm-5">
                <input type="submit" value="Log In" class="btn btn-primary pull-right">
            </div>
        </div>
    </form>
</div>